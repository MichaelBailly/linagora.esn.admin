.card-body.card-padding(ng-show="!$ctrl.ldapConfig.deleted")
  form.form(role="form", aria-hidden="true")
    .row
      .col-xs-12.col-md-6
        .form-group
          .fg-line
            input.input.title.form-control(type="text", ng-model='$ctrl.ldapConfig.name', placeholder="#{__('Name')}", required)
          .fg-line
            input.input.title.form-control(type="text", ng-model='$ctrl.ldapConfig.configuration.url',placeholder="#{__('URL')}", required)
        .form-group
          .field-name #{__('Mapping')}
          .fg-line
            input.input.title.form-control(type="text", ng-model='$ctrl.ldapConfig.configuration.mapping.firstname', placeholder="#{__('First name')}", required)
          .fg-line
            input.input.title.form-control(type="text", ng-model='$ctrl.ldapConfig.configuration.mapping.lastname', placeholder="#{__('Last name')}", required)
        .form-group
          .fg-line
            .checkbox
              label
                input(type="checkbox", ng-model='$ctrl.config.autoProvisioning')
                i.input-helper #{__('Auto Provisioning')}
      .col-xs-12.col-md-6
        .form-group
          .field-name #{__('Admin')}
          .fg-line
            input.input.title.form-control(type="text", ng-model='$ctrl.ldapConfig.configuration.adminDn',placeholder="#{__('Admin distinguished name')}", required)
          .fg-line
            input.input.title.form-control(type="password", ng-model='$ctrl.ldapConfig.configuration.adminPassword', placeholder="#{__('Admin Password')}", required)
        .form-group
          .field-name #{__('Search')}
          .fg-line
            input.input.title.form-control(type="text", ng-model='$ctrl.ldapConfig.configuration.searchBase', placeholder="#{__('Search Base')}", required)
          .fg-line
            input.input.title.form-control(type="text", ng-model='$ctrl.ldapConfig.configuration.searchFilter', placeholder="#{__('Search Filter')}", required)
      .col-xs-12.flex-end.form-bottom
        button.btn.btn-default(ng-click="$ctrl.delete()", type="button", title="#{__('Delete')}")
          i.mdi.mdi-delete
.card-body.card-padding(ng-show="$ctrl.ldapConfig.deleted && $ctrl.ldapConfig.name")
  .row
    .col-xs-12
      .p-t-5.flex-space-between
        span
          |  #{__('You removed LDAP configuration of ')} " {{$ctrl.ldapConfig.name}} "
        a(ng-click='$ctrl.undo()', href='')
          |  #{__("UNDO")}