infinite-list.lv-body(load-more-elements='$ctrl.loadMoreElements()')
  .lv-item.media(ng-repeat="member in $ctrl.members")
    .row
      .pull-left.p-r-15
        a(ng-href='/#/profile/{{::member._id}}')
          img.members-avatar(src='/images/user.png', ng-src='/api/users/{{::member._id}}/profile/avatar')
      .media-body
        .lv-title
          a(ng-href='/#/profile/{{::member._id}}')
            h4.media-heading {{::member.firstname}} {{::member.lastname}}
          span
            a(ng-href='mailto:{{::member.emails[0]}}' op-inbox-compose) {{::member.emails[0]}}
    hr
