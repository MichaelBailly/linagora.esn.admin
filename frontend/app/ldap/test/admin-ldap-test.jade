.flex-vertical-centered
  .message(ng-switch="$ctrl.message.status")
    i(ng-switch-when="testing")
      | #{__('Checking...')}
    i.c-green(ng-switch-when="success")
      | #{__('Connected successfully to LDAP server')}
    i.c-red(ng-switch-when="error")
      | #{__('Failed to connect to LDAP server: ' )} {{$ctrl.message.msg}}
  button.btn.btn-default.waves-effect(esn-submit="$ctrl.test()", type="button", title="#{__('Check connection to LDAP server')}")
    | #{__('Check')}
