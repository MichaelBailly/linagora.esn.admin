.admin-sidebar
  .admin-sidebar-close.visible-md
    a(href='', ng-click='$hide();close()')
  ul.nav.nav-pills.nav-stacked
    .listview
      .lv-body
        .lv-item.clickable.menu-heading
          i.mdi.mdi-server
          .menu-title #{__('Administration Center')}
          admin-platform-panel-switch
        a.lv-item.menu-item(href="", ui-sref="admin.domain.{{page.id}}", ui-sref-active="selected", ng-repeat="page in $ctrl.availablePages track by $index")
          i.mdi(ng-class="page.icon")
          .menu-title {{page.name}}
