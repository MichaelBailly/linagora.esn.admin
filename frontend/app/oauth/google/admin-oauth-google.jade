ng-form(name='form')
  .card
    .card-header
      h2 
        i.mdi.mdi-google
        | #{__('Google')}
      small
        a.action-link(href="https://console.developers.google.com/", target="_blank") 
          | #{__('How to register a Google application?')}
    .card-body.card-padding
      .row 
        .col-xs-12.col-md-4
          esn-form-group(label="#{__('Client ID')}")
            input.form-control(type="text", ng-model="$ctrl.config.client_id", autocomplete="off", name="client_id")
        .col-xs-12.col-md-8
          esn-form-group(label="#{__('Client Secret')}")
            input.form-control(type="text", ng-model="$ctrl.config.client_secret", autocomplete="off", name="client_secret")
